                            </div>

                            <div class="col-12 form-group mb-3 mb-3">
                                <label class="control-label col-md-2">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", Value = ViewBag.UserEmail } })                                
