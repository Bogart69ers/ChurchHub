@model ChurchHub.Payment

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="form-group">
        <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-5" style="padding-right:85rem;">
            <strong>Enter Amount</strong>
        </h3>
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", style="width:80%;" , placeholder = "Enter Amount" } })
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>
    <br />
    <br />
    <br />
    <br />
    <div>
        <img src="~/assets/images/QR.jpg" style="padding-left:40%;"/>
    </div>

    

    <button type="submit" class="btn btn-primary">Submit Payment</button>
}
